<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ohgiraffers.request.CommentMapper">
    <resultMap id="commentResultMap" type="com.ohgiraffers.request.CommentDTO">
        <id property="commentId" column="comment_id"/>
        <result property="postId" column="post_id"/>
        <result property="authorId" column="author_id"/>
        <result property="password" column="password"/>
        <result property="content" column="content"/>
        <result property="ipHash" column="ip_hash"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
    <select id="findAllComments" resultMap="commentResultMap">
        SELECT
        comment_id,
        post_id,
        author_id,
        password,
        content,
        ip_Hash,
        created_at,
        updated_at
        FROM comments
        ORDER by comment_id
    </select>
</mapper>